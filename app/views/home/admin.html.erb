 <div class="container">
 	<h1>Users - <%= @user.count %></h1>
 	<table class="table">
	  <thead class="thead-dark">
	    <tr>
	      <th scope="col">#</th>
	      <th scope="col">Email</th>
	      <th scope="col">created at</th>
	      <th scope="col">confirmed ?</th>
	    </tr>
	  </thead>
	  <tbody>
	  	<% @user.each do |user| %>
	    <tr>
	      <td><%= user.id %><br></td>
	      <td><%= user.email %><br></td>
	      <td><%= user.created_at.strftime("%I:%M %p | %a, %d,%b, %Y") %><br></td>
	      <td>
	      	<% if user.confirmed_at.blank? %>
	      		<span class="text-danger">Not-Confirmed</span>
	      	<% else
	      		 %>
	      		<span class="text-success">Confirmed</span>
	        <% end %> 
	      	<br></td>
	    </tr>
	  </tbody>
	  <% end %>
	</table>

	
 </div>

