<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Plant</th>
      <th scope="col">Diffcuilty</th>
      <th scope="col">Created Date</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  	<% @plant.each do |plant| %>
	    <tr>
	      <td><%= link_to plant.plant_name, edit_plantdetail_path(plant)  %></td>
	      <td><%= plant.diffcuilty %></td>
	      <td><%= plant.created_at %></td>
	      <td>
	      	
	      	<strong><%= link_to "Edit", edit_plantdetail_path(plant) %></strong>

	      	<strong><%= link_to "Delete", plant, class: 'text-danger', data: { toggle: 'modal', target: '#exampleModalCenter' }   %></strong>

				<!-- Modal -->
				<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
				  <div class="modal-dialog modal-dialog-centered" role="document">
				    <div class="modal-content">
				      <div class="modal-header">
				        <h5 class="modal-title" id="exampleModalLongTitle">Delete</h5>
				        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
				          <span aria-hidden="true">&times;</span>
				        </button>
				      </div>
				      <div class="modal-body">
				        Are you sure to delete <span class="text-danger"><strong><%= plant.plant_name %></strong></span> Plant details?
				      </div>
				      <div class="modal-footer">
				        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
				        <%= link_to 'delete' , plant, method: :delete, class: "btn btn-danger" %>
				      </div>
				    </div>
				  </div>
				</div>
			</td>
	    </tr>
  	<% end %>
  </tbody>
</table>