<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Plant(<%= current_user.plantdetails.count %>)</th>
      <th scope="col">Diffcuilty</th>
      <th scope="col">Created </th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  	<% @plant.each do |plant| %>
	    <tr>
	      <td><%= link_to plant.plant_name.camelcase, plantdetail_path(plant)  %></td>
	      <td><%= plant.diffcuilty.camelcase %></td>
	      <td><%= plant.created_at.strftime("%a, %B %e, %Y") %></td>
	      <td>
	      	
	      	<strong><%= link_to "Edit", edit_plantdetail_path(plant) %></strong>

	      	<strong>
	      		<span type="button" class="text-danger" 
         data-toggle="modal" data-target="#exampleModal<%= plant.id %>">
     		Delete</span>
    		</strong>

				<!-- Modal -->
				<div class="modal fade" id="exampleModal<%= plant.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
				  <div class="modal-dialog modal-dialog-centered" role="document">
				    <div class="modal-content">
				      <div class="modal-header bg-danger">
				        <h5 class="modal-title text-white" id="exampleModalLongTitle">Delete</h5>
				        <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
				          <span aria-hidden="true">&times;</span>
				        </button>
				      </div>
				      <div class="modal-body">
				        Are you sure to delete <span class="text-danger"><strong><%= plant.plant_name %></strong></span> Plant details?
				      </div>
				      <div class="modal-footer">
				        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
				        <%= link_to "Delete" , plant, method: :delete, class: "btn btn-danger" %>
				      </div>
				    </div>
				  </div>
				</div>
			</td>
	    </tr>
  	<% end %>
  </tbody>
</table>